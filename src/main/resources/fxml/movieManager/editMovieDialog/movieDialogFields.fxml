<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="424.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.cinema.ui.movieManager.editMovieDialog.MovieDialogFieldController">
    <Label prefHeight="20.0" prefWidth="280.0" text="Title">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="title" prefHeight="26.0" prefWidth="280.0">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets bottom="25.0" />
        </VBox.margin>
    </TextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Description">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="description" prefHeight="26.0" prefWidth="280.0">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets bottom="25.0" />
        </VBox.margin>
    </TextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Release date">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
   <DatePicker fx:id="releaseDate" prefHeight="26.0" prefWidth="290.0" />


    <Label fx:id="warningMessage" alignment="TOP_LEFT" prefHeight="68.0" prefWidth="278.0" textFill="RED" wrapText="true">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>
</VBox>
