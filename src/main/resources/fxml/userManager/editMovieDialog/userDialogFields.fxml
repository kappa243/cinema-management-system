<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<VBox prefHeight="424.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.edu.agh.cinema.ui.userManager.editUserDialog.UserDialogFieldController">
    <Label prefHeight="20.0" prefWidth="280.0" text="First name">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <MFXTextField id="firstname" fx:id="firstName" prefHeight="26.0" prefWidth="280.0" floatMode="DISABLED">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </MFXTextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Second name">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <MFXTextField id="lastname" fx:id="lastName" prefHeight="26.0" prefWidth="280.0" floatMode="DISABLED">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </MFXTextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Email">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <MFXTextField id="email" fx:id="email" prefHeight="26.0" prefWidth="280.0" floatMode="DISABLED">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </MFXTextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Password">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <MFXPasswordField fx:id="password" prefHeight="26.0" prefWidth="280.0" floatMode="DISABLED">
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </MFXPasswordField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Role">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <MFXComboBox fx:id="roleChoiceBox" prefHeight="26.0" prefWidth="280.0" floatMode="BORDER"/>
    <Label fx:id="warningMessage" alignment="TOP_LEFT" prefHeight="68.0" prefWidth="278.0" textFill="RED"
           wrapText="true">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
</VBox>
