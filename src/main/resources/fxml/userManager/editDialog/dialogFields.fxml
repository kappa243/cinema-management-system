<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="424.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.edu.agh.cinema.ui.userManager.editDialog.DialogFieldController">
    <Label prefHeight="20.0" prefWidth="280.0" text="First name">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField id="firstname" fx:id="firstName" prefHeight="26.0" prefWidth="280.0">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </TextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Second name">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField id="lastname" fx:id="lastName" prefHeight="26.0" prefWidth="280.0">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </TextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Email">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField id="email" fx:id="email" prefHeight="26.0" prefWidth="280.0">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </TextField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Password">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <PasswordField fx:id="password" prefHeight="26.0" prefWidth="280.0">
        <VBox.margin>
            <Insets bottom="25.0"/>
        </VBox.margin>
    </PasswordField>
    <Label prefHeight="20.0" prefWidth="280.0" text="Role">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <ChoiceBox fx:id="roleChoiceBox" prefHeight="26.0" prefWidth="280.0"/>
    <Label fx:id="warningMessage" alignment="TOP_LEFT" prefHeight="68.0" prefWidth="278.0" textFill="RED"
           wrapText="true">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Label>
</VBox>
